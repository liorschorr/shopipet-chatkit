{
  "version": 2,
  "public": true,
  "includeFiles": ["web/**", "public/**", "api/**"],
  "builds": [
    { "src": "api/chat.py", "use": "@vercel/python" },
    { "src": "web/(.*)", "use": "@vercel/static" },
    { "src": "public/(.*)", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/web/(.*)", "dest": "/web/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
