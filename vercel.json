{
  "version": 2,
  "builds": [
    { "src": "api/chat.py", "use": "@vercel/python" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/web/(.*)", "dest": "/web/$1" },
    { "src": "/public/(.*)", "dest": "/public/$1" }
  ]
}
