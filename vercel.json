{
  "version": 2,
  "_comment": "גרסה זו נועדה לנקות את זיכרון המטמון של Vercel",
  "builds": [
    { "src": "api/chat.py", "use": "@vercel/python" },
    { "src": "api/update_catalog.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/update-catalog", "dest": "/api/update_catalog.py" },
    { "src": "/api/(.*)", "dest": "/api/chat.py" },
    { "src": "/web/(.*)", "dest": "/api/chat.py" },
    { "src": "/public/(.*)", "dest": "/api/chat.py" },
    { "src": "/openapi.json", "dest": "/api/chat.py" },
    { "src": "/(.*)", "dest": "/api/chat.py" }
  ],
  "crons": [
    {
      "path": "/api/update-catalog",
      "schedule": "0 3 * * *"
    }
  ]
}
