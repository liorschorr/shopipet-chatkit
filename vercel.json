{
  "version": 2,
  "buildCommand": "mkdir -p output/web && mkdir -p output/public && cp -r web/* output/web/ && cp -r public/* output/public/",
  "outputDirectory": "output",
  "builds": [
    { "src": "api/chat.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/chat.py" },
    { "src": "/web/(.*)", "dest": "web/$1" },
    { "src": "/public/(.*)", "dest": "public/$1" }
  ]
}
