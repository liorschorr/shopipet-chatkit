{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/chat" },
    { "source": "/embed.js", "destination": "/web/embed.js" }
  ],
  "headers": [
    {
      "source": "/web/embed.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ] 
    },
    {
      "source": "/embed.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ] 
    }
  ],
  "crons": [
    {
      "path": "/api/update-catalog",
      "schedule": "0 3 * * *"
    }
  ]
}
